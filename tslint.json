{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  },
  "rules": {
    "indent": [true, "spaces", 2],
    "whitespace": [true,
      "check-branch",
      "check-operator",
      "check-separator",
      "check-typecast"
    ],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-snake-case"],
    "object-literal-sort-keys": true
  },
  "rulesDirectory": []
}
